#!/usr/bin/env node

const { exec, execSync } = require('child_process');

const delimiter = '| ';

const cpu = `
    echo "ïƒ¤" &&
    top -bn1 | grep "Cpu(s)" | \
    sed "s/.*, *\\([0-9.]*\\)%* id.*/\\1/" | \
    awk '{print 100 - $1}' | \
    xargs -I {} printf "%4.4s" "{}" &&
    echo '%'
`;

const memory = `
    echo "ïƒ«" &&
    free -h | grep Mem | awk '{ print $3 " / " $2 }' | sed 's/Gi/G/g'
`;

const weathercheck = `
    [ "$(stat -c %y "$HOME/.local/share/weatherreport" 2>/dev/null | cut -d' ' -f1)" != "$(date '+%Y-%m-%d')" ] &&
        ping -q -c 1 1.1.1.1 >/dev/null &&
        curl -s "wttr.in/$location" > "$HOME/.local/share/weatherreport" &&
        notify-send "ðŸŒž Weather" "New weather forecast for today."
`;

const weather = `
    [ "$(stat -c %y "$HOME/.local/share/weatherreport" 2>/dev/null | cut -d' ' -f1)" = "$(date '+%Y-%m-%d')" ] &&
        sed '16q;d' "$HOME/.local/share/weatherreport" | grep -wo "[0-9]*%" | sort -n | sed -e '$!d' | sed -e "s/^/ïƒ© /g" | tr -d '\n' &&
        sed '13q;d' "$HOME/.local/share/weatherreport" | grep -o "m\\(-\\)*[0-9]\\+" | sort -n -t 'm' -k 2n | sed -e 1b -e '$!d' | tr '\n|m' ' ' | awk '{print " ï‹œ",$1 "Â°","ï†…",$2 "Â°"}'

`;

const wifi = `
    grep "^\\s*w" /proc/net/wireless | awk '{ print "ï‡«", int($3 * 100 / 70) "%" }'
    sed "s/down//;s/up/ï‚¬/" /sys/class/net/e*/operstate
`;

const email = `
    command -v mw >/dev/null 2>&1 &&
    du -a ~/.local/share/mail/*/INBOX/new/* 2>/dev/null | wc -l | sed 's/^/ïŠ¶:/'
`;

const battery = `
    for x in /sys/class/power_supply/BAT?/capacity;
    do
    case "$(cat $x)" in
        100|9[0-9]) echo "ï‰€" ;;
        8[0-9]|7[0-9]) echo "ï‰" ;;
        6[0-9]|5[0-9]) echo "ï‰‚" ;;
        4[0-9]|3[0-9]) echo "ï‰ƒ" ;;
        *)  echo "ï‰„" ;;
    esac
    cat "$x"
    echo "%"
    done
`;

const date = `date '+%Y %b %d (%a) %I:%M:%S%p %:z'`;

const runCommand = command => execSync(command).toString();

const getStatusbar = () => {
    const commands = [weather, cpu, memory, wifi, email, battery, date];
    const statusbarArr = commands.reduce((acc, val) => [...acc, runCommand(val)], []);
    const statusbar = statusbarArr
		.join(delimiter)
		.replace(/\n/g, ' ')
		.replace(/\s{2,}/g, ' ')
		.replace(/\s*%/g, '%');
    return statusbar;
}

const setStatusbar = () => {
    const statusbarBase = getStatusbar();
    const statusbar = ` ${statusbarBase}`;
	//console.log(statusbar);
    exec(`xsetroot -name "${statusbar}"`);
}

// Run the script each second
setInterval(() => {
    try {
        setStatusbar();
    } catch (e) {
        // Fail silently
    }
}, 1000)

// Cronjob like tasks
setInterval(() => {
    runCommand(weathercheck);
}, 3600 * 1000)
